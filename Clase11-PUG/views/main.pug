doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous") 
    link(rel="icon" href="https://image.flaticon.com/icons/png/512/3585/3585145.png" type="image" sizes="16x16")
    title Productos
  body
      section(class="container pt-5")
        h1(class="mt-3 mb-3 text-center") Lista de Productos
        if (listaProductos.length>0)
          table(class="table table-light table-hover align-middle" style="margin: 5px 10px 5px 5px")
            thead
              tr
                th(scope="col" class="text-start fs-3 fw-normal") Nombre
                th(scope="col" class="text-start fs-3 fw-normal") Precio
                th(scope="col" class="text-start fs-3 fw-normal") Imagen
            tbody
              each prod in listaProductos
                tr
                  td(class="text-start fs-4") #{prod.title}
                  td(class="text-start fs-4") $ #{prod.price}
                  td  
                    img(src= prod.thumbnail style="width:4rem; height:4rem")
        else 
          h3(class="text-danger fs-3 mt-3 text-center") No hay Productos!
   
   
   
         
       
        
        
       





