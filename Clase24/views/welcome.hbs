<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous" />
    <link rel="icon" href="https://image.flaticon.com/icons/png/512/3585/3585145.png" type="image" sizes="16x16" />
    <title>Welcome</title>
</head>

<body>
    <section class="container pt-5">
        <form action="/ecommerce/logout" method="POST">
            <div class="form-row">
                <div class="form-group col-md-6">
                    {{#if login}}
                        {{#if username}}
                            <h1 class="mt-3 mb-3 pl-3">Bienvenido {{username}}</h1>
                        {{else}} 
                            <h1 class="mt-3 mb-3 pl-3">Bienvenido!</h1>
                        {{/if}}  
                        <button type= "submit" class="btn btn-secondary mt-3">
                            Desloguear
                        </button>  
                    {{else}}  
                        {{#if username}}
                            <h1 class="mt-3 mb-3 pl-3">Hasta luego {{username}}</h1>
                        {{else}}
                            <h1 class="mt-3 mb-3 pl-3">Hasta luego!</h1> 
                        {{/if}}    
                    {{/if}} 
                </div>
            </div>        
        </form>
         
    </section> 
</body>

</html>
     
     